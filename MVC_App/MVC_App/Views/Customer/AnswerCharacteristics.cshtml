@model MVC_App.Models.Administrator.ParentModel

@{
    ViewBag.Title = "AnswerCharacteristics";
}

@{
    string[] imgs = {
    "https://tsbbankwallaceartscentre.org.nz/wp-content/uploads/2011/01/65fa961e-8f22-4fe6-a420-3c3c26dd2953.jpg._CB289161999__SL300__.jpg",
    "http://www.earnthenecklace.com/wp-content/uploads/2016/06/Jon-Snow-HBO-300x300.jpg",
    "http://worldartsme.com/images/garfield-the-cat-clipart-1.jpg",
