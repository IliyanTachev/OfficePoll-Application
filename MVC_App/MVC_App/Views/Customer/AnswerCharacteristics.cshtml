    "https://www.pinknews.co.uk/images/2014/09/Dumbledore2.jpg"
    };

}

<div>
    <h1>Answer your personal info.</h1>
</div>

@foreach (var type in Model.CharacteristicsToAnswersCollection)
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
               <h3>@Html.DisplayFor(model => type._text)</h3>
            </div>
        </div>

        @{ Html.BeginForm("AnswerCharacteristics", "Customer", FormMethod.Post, new { @id = "myForm" }); }

        @{ 
            int i = 0;

            foreach (var answer in type.answers_to_characteristic)
            {
            <div>
                @Html.RadioButtonFor(x => x.CharacteristicsToAnswersCollection, answer.Text)
               <font size="4"> @answer.Text </font>
            </div>

            <img src="@Url.Content(imgs[i] )" width="150" height="150" /><br><br><br><br>

                i++;
            }
        }

            @{ Html.EndForm(); }

